<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Capstone_Project_v0._1.LoginPage"
             Title="Login">
    <VerticalStackLayout Padding="30" Spacing="16">
        <Label 
            Text="Welcome!" FontSize="32" HorizontalOptions="Center"/>
        <Entry x:Name="UsernameEntry" Placeholder="Username" />
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />
        <Button Text="Login" Clicked="OnLoginClicked" />
        <Button Text="Register" Clicked="OnRegisterClicked" />
        <Label x:Name="StatusLabel" TextColor="Red" />
    </VerticalStackLayout>
</ContentPage>